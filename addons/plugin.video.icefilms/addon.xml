<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.icefilms"
       name="Icefilms"
       version="1.0.2"
       provider-name="anarchintosh,daledude">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
        <import addon="script.module.mechanize" version="0.2.4"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Icefilms</summary>
        <description>This XBMC plugin enables streaming and downloading scene releases from the megaupload links listed on Icefilms.info</description>
    </extension>
</addon>
