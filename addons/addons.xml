<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.icefilms"
       name="Icefilms"
       version="1.0.22"
       provider-name="anarchintosh,daledude,wesada">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Stream and download scene releases from the megaupload links listed on Icefilms.info</summary>
        <description>Turns your XBMC into an instant free on-demand media-center. Stream and download to your library pure .avi scene releases, in DVD and HD720p quality. Browse and search the library of over 77,000 videos with metadata and posters. Never experience the frustration of dead video links!</description>
    </extension>
</addon>

<addon id="repository.googlecode.anarchintosh-projects" name="anarchintosh addons" version="1.0.1" provider-name="anarchintosh">
	<extension point="xbmc.addon.repository" name="anarchintosh add-on repository">
		<info compressed="false">http://anarchintosh-projects.googlecode.com/svn/addons/addons.xml</info>
		<checksum>http://anarchintosh-projects.googlecode.com/svn/addons/addons.xml.md5</checksum>
		<datadir zip="true">http://anarchintosh-projects.googlecode.com/svn/addons</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Addons from http://anarchintosh-projects.googlecode.com</summary>
		<description>Download and install addons from anarchintosh repository.</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.download.oneddl"
       name="OneDDL.com"
       version="0.2.1"
       provider-name="pgoeri">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="plugin.program.jdownloader" version="1.0.2"/>
    <import addon="script.module.ddlscraper" version="0.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Browse releases on OneDDL.com and add links to JDownloader</summary>
    <description lang="en">This plugin scrapes posts from OneDDL.com and presents them as directory items. By selecting a post the link gets added to JDownloader.</description>
  </extension>
</addon>

